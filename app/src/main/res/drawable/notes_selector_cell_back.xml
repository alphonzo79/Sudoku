<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_activated="true" android:state_pressed="false">
        <shape>
            <stroke android:color="@android:color/black"
                android:width="1dp" />
            <solid android:color="@color/activated_not_pressed" />
        </shape>
    </item>

    <item android:state_activated="true" android:state_pressed="true">
        <shape>
            <stroke android:color="@android:color/black"
                android:width="1dp" />
            <solid android:color="@color/activated_pressed" />
        </shape>
    </item>

    <item android:state_activated="false" android:state_pressed="true">
        <shape>
            <stroke android:color="@android:color/black"
                android:width="1dp" />
            <solid android:color="@color/activated_pressed" />
        </shape>
    </item>

    <item android:state_activated="false" android:state_pressed="false">
        <shape>
            <stroke android:color="@android:color/black"
                android:width="1dp" />
            <solid android:color="@color/unactivated_not_pressed" />
        </shape>
    </item>
</selector>